<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/abc">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="@string/multiplication"
        android:gravity="center_horizontal" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="30dip">

            <CheckBox
                android:id="@+id/checkBoxMultiplication1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="20dip"
                android:text="1" />

            <CheckBox
                android:id="@+id/checkBoxMultiplication2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_margin="20dip"
                android:text="2" />

            <CheckBox
                android:id="@+id/checkBoxMultiplication3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_margin="20dip"
                android:text="3" />

            <CheckBox
                android:id="@+id/checkBoxMultiplication4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_margin="20dip"
                android:text="4" />

            <CheckBox
                android:id="@+id/checkBoxMultiplication5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_margin="20dip"
                android:text="5" />

            <CheckBox
                android:id="@+id/checkBoxMultiplication6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_margin="20dip"
                android:text="6" />

            <CheckBox
                android:id="@+id/checkBoxMultiplication7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_margin="20dip"
                android:text="7" />

            <CheckBox
                android:id="@+id/checkBoxMultiplication8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_margin="20dip"
                android:text="8" />

            <CheckBox
                android:id="@+id/checkBoxMultiplication9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_margin="20dip"
                android:text="9" />

        </GridLayout>

        <Button
            android:id="@+id/startMultiplicationGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start"
            android:background="@drawable/rounded_button"
            android:layout_margin="50dip"/>


</LinearLayout>